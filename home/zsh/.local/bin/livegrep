#!/usr/bin/env bash
set -uo pipefail

fdfind_cmd=$(command -v fdfind || command -v fd)

if [ -n "$fdfind_cmd" ]; then
  "$fdfind_cmd" . \
    --type f \
    --size -30k \
    --exclude '**/node_modules/**' \
    --exclude '**/coverage/**' \
    --exclude '**/dist/**' \
    --exclude '**/.git/**' \
    --exec grep -H "$1" {} \;
  exit 0
fi

find . \
  -type f \
  -size -30k \
  -and \( \
    -not -path "*/node_modules/*" \
    -and -not -path '*/coverage/*' \
    -and -not -path "*/dist/*" \
    -and -not -path "*/.git/*" \
  \) \
  -exec grep -H "$1" {} \;
